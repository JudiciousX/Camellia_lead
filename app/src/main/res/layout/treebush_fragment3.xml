<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:layout_width="29dp"
        android:layout_height="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/t1"
        app:layout_constraintBottom_toBottomOf="@id/t1"
        android:background="@drawable/back1"
        android:layout_margin="5dp"
        android:id="@+id/back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t1"
        android:text="确认认养"
        android:textSize="18dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/back"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line5"
        android:background="#9E605D5D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/back"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:id="@+id/image1"
        android:layout_margin="5dp"
        android:src="@drawable/pic6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line5"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/t2"
        android:text="精选茶园茶亩茶树茶苗"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image1"
        app:layout_constraintTop_toTopOf="@id/image1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t3"
        app:layout_constraintStart_toEndOf="@id/image1"
        app:layout_constraintTop_toBottomOf="@id/t2"
        android:text="陕西省商洛"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/btnDecrease"
        android:layout_width="20dp"
        android:layout_height="21dp"
        android:layout_weight="1"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/t3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/add"/>

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="9dp"
        android:background="@null"
        android:inputType="number"
        android:gravity="center"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/t3"
        app:layout_constraintEnd_toStartOf="@id/btnDecrease"
        android:text="1"/>

    <Button
        android:id="@+id/btnIncrease"
        android:layout_width="20dp"
        android:layout_height="21dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/reduce"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/t3"
        app:layout_constraintEnd_toStartOf="@id/etAmount"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="认养人姓名："
        android:textColor="@color/black"
        android:id="@+id/t4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:textSize="16dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_name1"
        app:layout_constraintStart_toEndOf="@id/t4"
        app:layout_constraintTop_toTopOf="@id/t4"
        app:layout_constraintBottom_toBottomOf="@id/t4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联 系 方 式 ："
        android:textColor="@color/black"
        android:id="@+id/t5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_name1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:textSize="16dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_name2"
        app:layout_constraintStart_toEndOf="@id/t5"
        app:layout_constraintTop_toTopOf="@id/t5"
        app:layout_constraintBottom_toBottomOf="@id/t5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    备     注    ："
        android:textColor="@color/black"
        android:id="@+id/t6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_name2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:textSize="16dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_beizhu"
        app:layout_constraintStart_toEndOf="@id/t6"
        app:layout_constraintTop_toTopOf="@id/t6"
        app:layout_constraintBottom_toBottomOf="@id/t6"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="提交"
        android:gravity="center"
        android:background="#C94CAF50"
        android:textSize="20dp"
        android:id="@+id/commit"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_beizhu"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>